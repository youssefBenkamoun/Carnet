<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/idsss"
        android:layout_width="9dp"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="id"
        android:textSize="6dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/client"
        android:layout_width="157dp"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:paddingTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toEndOf="@+id/clientLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prix"
        android:layout_width="157dp"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:paddingTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toEndOf="@+id/prixLabel"
        app:layout_constraintTop_toBottomOf="@+id/product" />

    <TextView
        android:id="@+id/product"
        android:layout_width="157dp"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:paddingTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toEndOf="@+id/produitLabel"
        app:layout_constraintTop_toBottomOf="@+id/client" />

    <TextView
        android:id="@+id/prixLabel"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:paddingTop="5dp"
        android:text="Prix :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/produitLabel" />

    <TextView
        android:id="@+id/produitLabel"
        android:layout_width="97dp"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:paddingTop="5dp"
        android:text="Produit :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientLabel" />

    <TextView
        android:id="@+id/ids"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clientLabel"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:paddingTop="5dp"
        android:text="Client :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

